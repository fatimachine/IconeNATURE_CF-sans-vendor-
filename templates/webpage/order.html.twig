    <div class="row g-3">
        <div class="col-9 card shadow-sm p-3 m-auto">
            <img src="{{product.image}}" style="width: 50%; height: auto; margin: auto;" alt="photo">
            <p class="col-8 text-center card-text mx-auto mt-2">{{product.description}}</p>
      
        <div class="col-8 mx-auto border p-2">
            {{ form_start(form) }}
            <div class="row">
            <div class="col-4">
                {{ form_row(form.ProductName,{ 'value':product.name }) }}
            </div>
            <div class="col-4">
                {{ form_row(form.ProductRefNo,{ 'value':product.referenceNo }) }}
            </div>
            <div class="col-4">
                {{ form_row(form.price,{ 'value':product.price }) }}
            </div>
            </div>

            <div class="row">
            <div class="col-3">
                {{ form_row(form.size) }}
            </div>
            <div class="col-3">
                {{ form_row(form.color) }}
            </div>
            <div class="col-3">
                {{ form_row(form.quantity) }}
            </div>
            <div class="col-3">
                {{ form_row(form.deliveryMethod) }}
            </div>
            </div>

            <div class="row">
            <div class="col-6">
                {{ form_row(form.firstName,{ 'value':app.user.firstName }) }}
            </div>
            <div class="col-6">
                {{ form_row(form.lastName,{ 'value':app.user.lastName }) }}
            </div>
            </div>

            <div class="row">
            <div class="col-6">
                {{ form_row(form.email,{ 'value':app.user.email }) }}
            </div>
            <div class="col-6">
                {{ form_row(form.phoneNo,{ 'value':app.user.phoneNo }) }}
            </div>
            </div>  
                
            <div class="row">
            <div class="col-6">
                {{ form_row(form.address,{ 'value':app.user.address}) }}
            </div>
            <div class="col-3">
                {{ form_row(form.postCode,{ 'value':app.user.postCode}) }}
            </div>
            <div class="col-3">
                {{ form_row(form.city,{ 'value':app.user.city}) }}
            </div>
            </div> 
                {# {{ form_row(form.createdAt) }} #}
                <button type="submit" class="btn btn-info my-2">Payer ma commande</button>
            {{ form_end(form) }}

        </div>
