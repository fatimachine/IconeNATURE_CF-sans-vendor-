{% extends 'base.html.twig' %}

  {% block title %}Vêtements femmes,mode hommes et femmes,achats en ligne|Icône Nature{% endblock %}

{% block body %}
<style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

<main>

    <section class="py-5 mb-5 text-center mx-auto animationBgk d-none d-md-block">
     
    </section>

  

  {#  Container pour les  Promotions  #}
  <div class="album py-3 mt-5 mt-md-0">
    <div class="container">

      <h2 class="text-center  my-3 py-2 rounded">Promotion exclusive jusqu'à 50%</h2>

      <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">
      {% for item in discount %}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{item.image}}" style="height: 225px; width: auto; margin: auto;padding-top: 25px;" alt="photo">
            <div class="card-body clr4">
              <h4>{{item.name}}</h4>
              <h3 class="text-danger fw-bold">Promotion: {{item.discount}}</h3>
              <h5 class="text-success">Prix: {{item.price}}€</h5>
              <p class="card-text">{{item.description  | slice(0,90) ~ '...'}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{path('show',{'id': item.id})}}" class="btn btn-sm btn-outline-success m-1">Détails</a>
                  <a href="{{path('cart_add', {'id' : item.id})}}" class="text-success m-1"><i class="bi bi-basket-fill fs-5 rounded px-1"></i></a>
            
                  <a href="{{path('favorite_add', {'id' : item.id})}}" class="text-success m-1"><i class="bi bi-heart-fill fs-5 rounded px-1"></i></a>
                </div>
              
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>

    {# 2eme Container pour les  nouveautés #}
    <div class="album py-3">
    <div class="container">

      <h2 class="text-center  my-3 py-2 rounded">Nouveautés</h2>

      <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">
      {% for item in products %}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{item.image}}" style="height: 225px; width: auto; margin: auto; padding-top: 25px;" alt="photo">

            <div class="card-body clr4">
              <h4>{{item.name}}</h4>
          
              <h4 class="text-success bold">Prix: {{item.price}}€</h4>
              <p class="card-text">{{item.description | slice(0,90) ~ '...'}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{path('show',{'id': item.id})}}" class="btn btn-sm btn-outline-success m-1">Détails</a>
                  <a href="{{path('cart_add', {'id' : item.id})}}" class="text-success m-1"><i class="bi bi-basket-fill fs-5  rounded px-1"></i></a>
               
                  <a href="{{path('favorite_add', {'id' : item.id})}}" class="text-success m-1"><i class="bi bi-heart-fill fs-5  rounded px-1"></i></a>
                </div>
        
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>

</main>

{% endblock %}
