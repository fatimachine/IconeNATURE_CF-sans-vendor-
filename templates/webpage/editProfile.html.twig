{% extends 'base.html.twig' %}

{% block title %}Votre profil
{% endblock %}

{% block body %}

	<style>
		/* Insertion de style pour la page  */
		body {
			background: #f7f7ff;
			margin-top: 20px;
		}
		.card {
			position: relative;
			display: flex;
			flex-direction: column;
			min-width: 0;
			word-wrap: break-word;
			background-color: #fff;
			background-clip: border-box;
			border: 0 solid transparent;
			border-radius: 0.25rem;
			margin-bottom: 1.5rem;
			box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
		}
		.me-2 {
			margin-right: 0.5rem !important;
		}
	</style>

	<div class="container">
		<div class="main-body">
			<div class="row mt-3">
				<div class="col-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">

								<div class="mt-3">
									<h3>{{app.user.firstName}}
										{{app.user.lastName}}</h3>
									<p class="text-secondary mb-1">Full Stack Developer</p>
									<p class="text-muted font-size-sm">{{app.user.address}}</p>
								
								</div>
							</div>
						
						</div>
					</div>
				</div>
				
				<div class="col-7 bg-white ms-auto p-3 card">
					{{form(form) }}
					
								<div class="ibox-content">
											<a href="{{path('profile')}}" class="btn btn-outline-success sm-3">Valider</a>
									</div>
					</div>
						
									
								
			</div>
				</div>
				
		</div>
	{% endblock %}
